<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rafael.ninoles.parra.dailyit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dailyit_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dailyit_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.DailyIt">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3878567329837453~6353575574"/>
        <activity
            android:name=".ui.activities.TaskActivity"
            android:exported="true" />
        <activity
            android:name=".InitActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DailyIt">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DailyIt" />
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DailyIt" />
    </application>

</manifest>